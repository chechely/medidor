    #tabela_edit{
        margin: 5px;
        margin-bottom: 50px;
        margin-left: 85px;
        display: none;
    }  
    
    .text-center{
        margin-left: 80px;
    }

</style>

</head>
<script>
$(document).ready(function(){
    $(".editar").click(function(){
        $("#tabela_edit").show();
        $("#tabela").hide();
